<?xml version="1.0" encoding="utf-8"?>
<extension version="5.2" type="template" client="site" method="upgrade">
	<name>yummy2</name>
	<creationDate>2024-11-03</creationDate>
	<author>Autor do Template</author>
	<authorEmail>email@example.com</authorEmail>
	<authorUrl>https://example.com</authorUrl>
	<copyright>Copyright 2024</copyright>
	<version>1.0.0</version>
	<description>Template Yummy2 para Joomla 5.2.0</description>

	<files>
		<!-- Arquivos HTML -->
		<filename>about-me.html</filename>
		<filename>blog.html</filename>
		<filename>categories.html</filename>
		<filename>contact.html</filename>
		<filename>index.html</filename>
		<filename>main.html</filename>
		<filename>recipe.html</filename>

		<!-- Arquivos CSS -->
		<folder>css</folder>

		<!-- Fonte e scripts adicionais -->
		<folder>Source</folder>
	</files>

	<positions>
		<position>header</position>
		<position>footer</position>
		<position>sidebar</position>
