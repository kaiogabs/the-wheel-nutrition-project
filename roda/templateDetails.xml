	</positions>

	<config>
		<fieldset name="basic">
			<field name="color" type="color" default="#ffffff" label="Cor de Fundo" description="Selecione a cor de fundo do template." />
			<!-- Outros campos de configuração personalizados -->
		</fieldset>
	</config>
